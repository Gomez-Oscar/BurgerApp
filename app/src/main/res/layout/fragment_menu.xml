<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.menu.MenuFragment">

        <TextView
            android:id="@+id/tv_burger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courgette"
            android:text="@string/menu_hamburguesas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_burger"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/burger_menu" />

        <TextView
            android:id="@+id/tv_perros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/courgette"
            android:text="@string/menu_perros"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_perros"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/perros_menu" />

        <TextView
            android:id="@+id/rv_complementos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/courgette"
            android:text="@string/menu_complementos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_complementos"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/complementos_menu" />

        <TextView
            android:id="@+id/tv_bebidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/courgette"
            android:text="@string/menu_bebidas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_bebidas"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/bebidas_menu" />

    </LinearLayout>
</ScrollView>